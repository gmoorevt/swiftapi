{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist/main",
    "lib": ["ES2022"],
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/main/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/renderer",
    "tests"
  ]
}
